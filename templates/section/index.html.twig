{% extends 'admin.html.twig' %}

{% block title %} {{ 'Sous-services' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
        <header class="card-header">
            <h4 class="card-title">{{ 'Liste des sous-services'|upper }}</h4>
            <a class="btn btn-label btn-info" href="{{ path('section_new') }}">
                <label><i class="ti-plus"></i></label>
                {{ 'Ajouter un nouveau'}}
            </a>
        </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Titre' }}</th>
                            <th>{{ 'Service parent' }}</th>
                            <th>{{ 'Date de creation' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Titre' }}</th>
                            <th>{{ 'Service parent' }}</th>
                            <th>{{ 'Date de creation' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for section in sections %}
                        <tr>
                            <td>{{ section.title }}</td>
                            <td>{{ section.category.name }}</td>
                            <td>{{ section.created ? section.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('section_show', {'id': section.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('section_edit', {'id': section.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucune donnée trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}