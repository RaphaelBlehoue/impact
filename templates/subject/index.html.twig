{% extends 'admin.html.twig' %}
{% block title %} {{ 'Categories Articles' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des categories'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('subject_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>Titre de la catégorie</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Titre de la catégorie</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for subject in subjects %}
                        <tr>
                            <td>{{ subject.title }}</td>
                            <td>
                                <a class="btn btn-dark" href="{{ path('subject_show', {'id': subject.id}) }}">{{ 'Afficher' }}</a>
                                <a class="btn btn-danger" href="{{ path('subject_edit', {'id': subject.id}) }}">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucune donnée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}