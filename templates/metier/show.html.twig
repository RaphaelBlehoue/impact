{% extends 'admin.html.twig' %}
{% block title %} {{ 'Section nos metiers' }} {% endblock %}
{% block body %}
    <div class="row">
        <div class="container">
            <div class="col-6 col-lg-offset-6">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title">{{ 'Section metiers'|upper }}</h4>
                        {{ include('metier/_delete_form.html.twig') }}
                    </header>
                    <img class="card-img-top" src="{{  asset(metier.assertPath) }}" alt="Card image cap">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>{{ 'Titre' }}</th>
                                <td>{{ metier.title }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'Contenu' }}</th>
                                <td>{{ metier.content }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-label btn-dark" href="{{ path('metier_index') }}">
                            <label><i class="ti-arrow-left"></i></label>
                            {{ 'Retour Ã  la liste'}}
                        </a>
                        <a class="btn btn-label btn-danger" href="{{ path('metier_edit', {'id': metier.id}) }}">
                            <label><i class="ti-pencil-alt"></i></label>
                            {{ 'Modifier' }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}