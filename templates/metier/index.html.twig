{% extends 'admin.html.twig' %}
{% block title %}{{ 'Section nos metiers' }}{% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Section metier'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('metier_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter le contenu'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for metier in metiers %}
                        <tr>
                            <td>{{ metier.title }}</td>
                            <td>
                                <a href="{{ path('metier_show', {'id': metier.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('metier_edit', {'id': metier.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}