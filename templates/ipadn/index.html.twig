{% extends 'admin.html.twig' %}

{% block title %}{{ 'Page ADN Contenu' }}{% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Page ADN'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('ipadn_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter le contenu'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for ipadn in ipadns %}
                        <tr>
                            <td>{{ ipadn.name }}</td>
                            <td>
                                <a href="{{ path('ipadn_show', {'id': ipadn.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('ipadn_edit', {'id': ipadn.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun contenu trouver</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}