{% extends 'admin.html.twig' %}
{% block title %} {{ 'section approche' }} {% endblock %}
{% block body %}
    <div class="col-6 col-md-offset-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Section approche détail'|upper }}</h4>
                {{ include('approch/_delete_form.html.twig') }}
            </header>
            <img class="card-img-top" src="{{ asset(approch.assertPath) }}" alt="Card image cap">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <td>{{ approch.title }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'contenu' }}</th>
                        <td>{{ approch.content }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-label btn-dark" href="{{ path('approch_index') }}">
                    <label><i class="ti-arrow-left"></i></label>
                    {{ 'Retour à la liste'}}
                </a>
                <a class="btn btn-label btn-danger" href="{{ path('approch_edit', {'id': approch.id}) }}">
                    <label><i class="ti-pencil-alt"></i></label>
                    {{ 'Modifier' }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}