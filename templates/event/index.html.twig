{% extends 'admin.html.twig' %}
{% block title %} {{ 'Formations en cours' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste formations en cours'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('event_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter une nouvelle'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Nom de la formation' }}</th>
                            <th>{{ 'Lieu de formations' }}</th>
                            <th>{{ 'Date de formations' }}</th>
                            <th>{{ 'Heure de formations' }}</th>
                            <th>{{ 'Filière' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Nom de la formation' }}</th>
                            <th>{{ 'Lieu de formations' }}</th>
                            <th>{{ 'Date de formations' }}</th>
                            <th>{{ 'Heure de formations' }}</th>
                            <th>{{ 'Filière' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ event.name }}</td>
                            <td>{{ event.lieu}}</td>
                            <td>{{ event.dateAt ? event.dateAt|localizeddate('none', 'none', 'fr_FR', null, "cccc, d MMMM Y") : '' }}</td>
                            <td>{{ event.times|localizeddate('none', 'none', 'fr_FR', null, "kk:mm zzzz") }}</td>
                            <td>{{ event.filiere.name }}</td>
                            <td>
                                <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Aucune donnée disponible</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}