{% extends 'admin.html.twig' %}
{% block title %} {{ 'Section video' }} {% endblock %}
{% block body %}
    <div class="row">
        <div class="container">
            <div class="col-6 col-lg-offset-6">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title">{{ 'Section video détail'|upper }}</h4>
                        {{ include('video/_delete_form.html.twig') }}
                    </header>
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe src="{{ video.link }}" frameborder="0" allowfullscreen=""></iframe>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>{{ 'Réference' }}</th>
                                <td>{{ video.id }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-label btn-dark" href="{{ path('video_index') }}">
                            <label><i class="ti-arrow-left"></i></label>
                            {{ 'Retour à la liste'}}
                        </a>
                        <a class="btn btn-label btn-danger" href="{{ path('video_edit', {'id': video.id}) }}">
                            <label><i class="ti-pencil-alt"></i></label>
                            {{ 'Modifier' }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}