{% extends 'base.html.twig' %}
{% block title %}{{ 'Nos metiers | Impact-performances' }}{% endblock %}
{% block slide %}
    <!--************************************
            Home Banner Start
    *************************************-->
    <div id="tg-innerbanner" class="tg-innerbanner">
        <figure data-vide-bg="poster: {{ asset('build/global/static/images/innerpagebanner/img-07.jpg') }}" data-vide-options="position: 0% 50%">
            <figcaption>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <h1>{{ 'Nos Metiers' }}</h1>
                            <h2>{{ 'Transformer la perception et le rôle de la communication à l’échelle panafricaine' }}</h2>
                        </div>
                    </div>
                </div>
            </figcaption>
        </figure>
    </div>
    <!--************************************
            Home Banner End
    *************************************-->
{% endblock %}
{% block body %}
    <!--************************************
        Blog Post Start
    *************************************-->
    {% if metiers|length > 0 %}
        {% for metier in metiers %}
            <div class="tg-ourprocess" id="tg-metier{{ metier.id }}">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <figure class="tg-processimg">
                                <img src="{{ metier.assertPath|imagine_filter('thumb_378_283') }}" alt="{{ metier.title }}">
                            </figure>
                            <div class="tg-processcontent">
                                <div class="tg-sectionhead tg-sectionheadvtwo">
                                    <div class="tg-sectiontitle">
                                        <h2>{{ metier.title|upper }}</h2>
                                    </div>
                                </div>
                                <div class="tg-description" style="text-align: justify;">
                                    {{ metier.content|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    <!--************************************
            Blog Post End
    *************************************-->

    <!--************************************
            Contact Us Start
    *************************************-->
    <section class="tg-haslayout tg-sectionspace">
        <div class="tg-contactus tg-contactusvtwo">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-push-2 col-lg-8">
                        <div class="tg-sectionhead tg-sectionheadvtwo">
                            <div class="tg-sectiontitle">
                                <h2>{{'Savoir-faire & Faire Savoir'|upper }}</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <ul class="tg-address">
                            {% if contacts|length > 0 %}
                                {% for contact in contacts %}
                                    <li>
                                        <figure>
                                            <a href="mailto:info-ci@impact-performances.com?bcc=henoh@impact-performances.com">
                                                <img src="{{ contact.assertPath|imagine_filter('thumb_903_452') }}" alt="{{ contact.country }}">
                                            </a>
                                            <div class="tg-addresscontent">
                                                <h2><span>Localisation {{ contact.country }}</span>{{ contact.country }}</h2>
                                                <em>Phone:  {{ contact.phone }}</em>
                                                <em>Email: <a href="mailto:{{ contact.mail }}?bcc=henoh@impact-performances.com">{{ contact.mail }}</a></em>
                                                <address>{{ contact.address }}</address>
                                                <a class="tg-btngetdirection" href="mailto:{{ contact.mail }}?bcc=henoh@impact-performances.com">{{ 'Nous Ecrirer' }}<i class="fa fa-angle-right"></i></a>
                                            </div>
                                        </figure>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--************************************
            Contact Us End
    *************************************-->
{% endblock %}

