{% extends 'base.html.twig' %}
{% block title %}{{ 'Actualités & Astuces | Impact-performances' }}{% endblock %}
{% block slide %}
    <!--************************************
            Home Banner Start
    *************************************-->
    <div id="tg-innerbanner" class="tg-innerbanner">
        <figure data-vide-bg="poster: {{ asset('build/global/static/images/innerpagebanner/img-07.jpg') }}" data-vide-options="position: 0% 50%">
            <figcaption>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <h1>{{ 'Actualités & Astuces' }}</h1>
                            <h2>{{ 'Toute l\'actualité sur la communication & le dévéloppement de votre entreprise' }}</h2>
                        </div>
                    </div>
                </div>
            </figcaption>
        </figure>
    </div>
    <!--************************************
            Home Banner End
    *************************************-->
{% endblock %}
{% block body %}
    <div class="tg-haslayout tg-sectionspace">
        <div class="container">
            <div class="row">
                <div class="tg-blogpost tg-blogpostvtwo tg-blogpostvseven">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        {% for post in posts %}
                            <article class="tg-post">
                                <figure>
                                    <a href="{{ path('page_blog_detail', {'id': post.id }) }}"><img src="{{ post.assertPath|imagine_filter('thumb_402_254') }}" alt="{{ post.title }}"></a>
                                    <span class="tg-postcategory">{{ post.subject.title }}</span>
                                </figure>
                                <div class="tg-postcontent">
                                    <div class="tg-posttitle">
                                        <h3><a href="{{ path('page_blog_detail', {'id': post.id }) }}">{{ post.title }}</a></h3>
                                    </div>
                                    <div class="tg-description">
                                        {{ post.content|truncate(150, '', '...')|raw }}
                                    </div>
                                    <ul class="tg-postmetadata">
                                        <li>
                                            <figure><a href="{{ path('page_blog_detail', {'id': post.id }) }}"><img src="{{ asset('build/global/static/images/allhome/1/img-09.jpg') }}" alt="{{ post.title }}"></a></figure>
                                            <span>Par <a href="{{ path('page_blog_detail', {'id': post.id }) }}">Admin</a></span>
                                        </li>
                                        <li><time datetime="{{ post.created|date('d m Y') }}">{{ post.created|date('d m Y') }}</time></li>
                                    </ul>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}