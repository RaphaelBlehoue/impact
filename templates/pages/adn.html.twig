{% extends 'base.html.twig' %}
{% block title %}{{ 'Notre ADN | Impact-performances' }}{% endblock %}
{% block slide %}
    <div id="tg-innerbanner" class="tg-innerbanner tg-innerbannervfour">
        {% for header in adn %}
            <figure data-vide-bg="poster: {{ asset(header.assertPath|imagine_filter('thumb_1900_1068')) }}" data-vide-options="position: 0% 50%">
                <figcaption>
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <h1>{{ header.name|upper }}</h1>
                                <h2>{{ 'Une toute nouvelle façon de développer votre entreprise'|capitalize }}</h2>
                            </div>
                        </div>
                    </div>
                    <a class="tg-btnscrolldown tg-btnscrolldownvtwo" href="#tg-main"></a>
                </figcaption>
            </figure>
        {% endfor %}
    </div>
{% endblock %}
{% block body %}
        <section id="tg-main" class="tg-sectionspace tg-haslayout tg-paddingbottomzero">
            <div class="container">
                <div class="row">
                    {% for head in adn %}
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-push-2 col-lg-8">
                            <div class="tg-sectionhead tg-sectionheadvtwo">
                                 <div class="tg-sectiontitle">
                                       <h2>{{head.name|upper }}</h2>
                                 </div>
                                <div class="tg-description">
                                    <p>{{ head.smallContent }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <!--************************************
            Content Area Start
        *************************************-->
        <section class="tg-haslayout">
            <div class="container-fluid">
                <div class="row">
                    <div class="tg-introduction tg-introductionvtwo">
                        {% for item in adn.0.ipitemadn %}
                            {% if adn.0.ipitemadn|length > 0 %}
                                {% if loop.index ==  3 %}
                                    <!--************************************
                                            Home Banner Start
                                    *************************************-->
                                    <div id="tg-homebannervthree" class="tg-homebanner tg-homebannervthree">
                                        {% for video in videos %}
                                            <figure class="item" data-vide-bg="poster: {{ video.assertPath|imagine_filter('thumb_1900_1000') }}" data-vide-options="position: 0% 50%">
                                                <figcaption>
                                                    <div class="container">
                                                        <div class="row">
                                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                                <div class="tg-maingoal tg-bannercontent">
                                                                    <div class="tg-btns">
                                                                        <a class="tg-btnplay tg-btnpink" href="{{ video.link }}" data-rel="prettyPhoto[video]"><i class="icon-play3"></i></a>
                                                                    </div>
                                                                    <h4><span style="color:#ffffff;">{{'ce que nous faisons'|capitalize }}</span></h4>
                                                                    <h1>La communication <span>au cœur du développement.</span></h1>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </figcaption>
                                            </figure>
                                        {% endfor %}
                                    </div>
                                    <!--************************************
                                            Home Banner End
                                    *************************************-->
                                {% endif %}
                                <div class="tg-mb10" id="tga-{{ item.id }}">
                                    {% if loop.index is divisible by(2) %}
                                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                            <div class="row">
                                                <div class="tg-textshortcode">
                                                    <h2><span>{{ item.title|upper }}</span></h2>
                                                    <div class="tg-description">
                                                        <p>{{ item.content|raw }}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                            <div class="row">
                                                <div class="tg-video" data-vide-bg="poster: {{ asset(item.assertPath|imagine_filter('thumb_980_688')) }}" data-vide-options="position: 0% 50%"></div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                            <div class="row">
                                                <div class="tg-video" data-vide-bg="poster: {{ asset(item.assertPath|imagine_filter('thumb_980_688')) }}" data-vide-options="position: 0% 50%"></div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                            <div class="row">
                                                <div class="tg-textshortcode">
                                                    <h2><span>{{ item.title|upper }}</span></h2>
                                                    <div class="tg-description">
                                                        <p>{{ item.content|raw }}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        <!--************************************
                Content Area End
        *************************************-->
    <section class="tg-sectionspace tg-haslayout tg-paddingbottomzero">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-push-2 col-lg-8">
                    <div class="tg-sectionhead tg-sectionheadvtwo">
                        <div class="tg-sectiontitle">
                            <h2>{{'Ils nous font confiance'|upper }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--************************************
    Brands Start
    *************************************-->
    <div class="tg-sectionspace tg-haslayout tg-paddingbottomzero">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-md-12 col-lg-12">
                    <div id="tg-barandsslider" class="tg-barandsslider owl-carousel tg-barands">
                        {% if partners|length > 0 %}
                            {% for partner in partners %}
                                <div class="item">
                                    <figure>
                                        <a href="javascript:void(0);(0);"><img src="{{ asset(partner.assertPath|imagine_filter('thumb_235_108')) }}" alt="{{ partner.assertPath  }}"></a>
                                    </figure>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--************************************
            Brands End
    *************************************-->
{% endblock %}