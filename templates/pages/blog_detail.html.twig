{% extends 'base.html.twig' %}
{% block title %}{{ 'Actualités & Astuces | Impact-performances' }}{% endblock %}
{% block slide %}
    <!--************************************
            Home Banner Start
    *************************************-->
    <div id="tg-innerbanner" class="tg-innerbanner">
        <figure data-vide-bg="poster: {{ asset('build/global/static/images/innerpagebanner/img-07.jpg') }}" data-vide-options="position: 0% 50%">
            <figcaption>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <h1>{{ 'Actualités & Astuces' }}</h1>
                            <h2>{{ 'Toute l\'actualité sur la communication & le dévéloppement de votre entreprise' }}</h2>
                        </div>
                    </div>
                </div>
            </figcaption>
        </figure>
    </div>
    <!--************************************
            Home Banner End
    *************************************-->
{% endblock %}
{% block body %}
    <!--************************************
            Blog Detail Start
    *************************************-->
    <div id="tg-content" class="tg-content">
        <div class="tg-blogpost tg-blogdetailvfour">
            <div class="tg-sectionspace tg-haslayout">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-10 col-lg-push-1">
                            <figure class="tg-blogdetailimg">
                                <img src="{{ post.assertPath|imagine_filter('thumb_960_469') }}" alt="image description">
                            </figure>
                            <div class="tg-detailbox">
                                <h2>{{ post.title }}</h2>
                                <ul class="tg-postmetadata">
                                    <li><span>Par <a href="javascript:void(0);">Admin</a></span></li>
                                    <li><time datetime="2017-07-07">{{ post.created|date('d m Y') }}</time></li>
                                </ul>
                                <div class="tg-description">
                                    {{ post.content|raw }}
                                </div>
                                <div class="tg-sharepost">
                                    <ul class="tg-socialicons">
                                        <li class="tg-facebook"><a href="javascript:void(0);"><i class="icon-facebook-1"></i><span>Partager</span></a></li>
                                        <li class="tg-twitter"><a href="javascript:void(0);"><i class="icon-twitter-1"></i><span>Tweet</span></a></li>
                                        <li class="tg-linkedin"><a href="javascript:void(0);"><i class="icon-linkedin22"></i><span>Partager</span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--************************************
            Blog Detail End
    *************************************-->
{% endblock %}

