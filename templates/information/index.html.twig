{% extends 'admin.html.twig' %}
{% block title %}{{ 'Section fondateur' }}{% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Section contact'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('information_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter le contenu'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Pays' }}</th>
                        <th>{{ 'Téléphone' }}</th>
                        <th>{{ 'Adresse' }}</th>
                        <th>{{ 'Email' }}</th>
                        <th>{{ 'Ville' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Pays' }}</th>
                        <th>{{ 'Téléphone' }}</th>
                        <th>{{ 'Adresse' }}</th>
                        <th>{{ 'Email' }}</th>
                        <th>{{ 'Ville' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for information in information %}
                        <tr>
                            <td>{{ information.country }}</td>
                            <td>{{ information.phone }}</td>
                            <td>{{ information.address }}</td>
                            <td>{{ information.mail }}</td>
                            <td>{{ information.city }}</td>
                            <td>
                                <a href="{{ path('information_show', {'id': information.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('information_edit', {'id': information.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}